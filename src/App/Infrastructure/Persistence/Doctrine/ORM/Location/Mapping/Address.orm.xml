<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          http://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <embeddable name="App\Domain\Model\Location\Address">
        <field name="street" type="string" length="255" column="street" nullable="false"/>
        <field name="postalCode" type="string" length="255" column="postal_code" nullable="false"/>
        <field name="city" type="string" length="255" column="city" nullable="false"/>

    </embeddable>
</doctrine-mapping>
