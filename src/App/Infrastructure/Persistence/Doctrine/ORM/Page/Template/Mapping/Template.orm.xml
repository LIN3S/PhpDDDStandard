<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          http://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="App\Domain\Model\Page\Template\Template" inheritance-type="JOINED">
        <discriminator-column name="template" type="string"/>
        <discriminator-map>
            <discriminator-mapping value="default" class="App\Domain\Model\Page\Template\DefaultTemplate"/>
            <discriminator-mapping value="contact" class="App\Domain\Model\Page\Template\ContactTemplate"/>
        </discriminator-map>

        <id name="id" type="template_id" column="id"/>

        <one-to-one field="pageTranslation" target-entity="App\Domain\Model\Page\PageTranslation"
                    inversed-by="template">
            <join-column name="page_translation_id" referenced-column-name="id"/>
        </one-to-one>
    </entity>
</doctrine-mapping>
