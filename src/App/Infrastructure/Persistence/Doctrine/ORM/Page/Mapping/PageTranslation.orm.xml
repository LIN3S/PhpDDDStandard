<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          http://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="App\Domain\Model\Page\PageTranslation" table="page_translation">
        <id name="id" type="page_translation_id" column="id"/>

        <embedded name="title" class="LIN3S\CMSKernel\Domain\Model\Page\PageTitle" use-column-prefix="false"/>
        <embedded name="slug" class="LIN3S\SharedKernel\Domain\Model\Slug\Slug" use-column-prefix="false"/>
        <embedded name="seo" class="LIN3S\CMSKernel\Domain\Model\Seo\Metadata" column-prefix="seo_"/>

        <many-to-one field="origin" target-entity="App\Domain\Model\Page\Page" inversed-by="translations">
            <join-column name="page_id" referenced-column-name="id"/>
        </many-to-one>

        <one-to-one field="template" target-entity="App\Domain\Model\Page\Template\Template"
                     mapped-by="pageTranslation" orphan-removal="true">
            <cascade>
                <cascade-persist/>
                <cascade-remove/>
            </cascade>
        </one-to-one>
    </entity>
</doctrine-mapping>
